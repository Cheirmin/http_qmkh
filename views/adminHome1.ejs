<!DOCTYPE html>
<!-- 管理员用户页面 -->
<html>
  <head>
    <title><%= title %></title>
      <link rel='stylesheet' href='/stylesheets/style5.css'  type="text/css" />
  </head>
  <body>
    <div class="top-buttons-agileinfo">
    <div class="top-buttons-left">
    <h2><a><%= title %></a></h2>
    </div>
    <div class="top-buttons-right">
        <div class="switch">当前用户：<%= username %>&nbsp&nbsp</br><<%= email %>></div>
       <h5><a href="/users/logout">登出</a></h5>
    </div>

  </div>
  <div class="content">
  <div class="content-view">
    <a href="/home">用户信息管理</a>
    <a  class="a1" href="">图书信息管理</a>
    <table class="content-view-table">
      <tr class="tr-1">
        <th ><th><th class="th-1">操作管理&nbsp&nbsp&nbsp</th></th></th>
        <th class="th-2">书名&nbsp&nbsp&nbsp</th>
        <th class="th-3">编号&nbsp&nbsp&nbsp</th>
        <th class="th-4">借阅者&nbsp&nbsp&nbsp</th>
        <th class="th-6">借阅时间&nbsp&nbsp&nbsp</th>
      </tr>
      <% for(var i in booksinfo) { if(booksinfo[i].deleted_at == null ){ %>
          <tr>
            <th>
              <th>
              <form  action="#" method="get" style="width: 50px;">
                <button type="submit" value="<%= booksinfo[i].book_id %>" >修改</form>
              </th>
              <th class="th-8">
              <form  action="#" method="get">
                <button type="submit" value="<%= booksinfo[i].book_id %>"
                onclick="if (confirm('确定要删除吗？') == false) return false;"/>删除</form>
              </th>
            </th>
            <th class="th-7"><%= booksinfo[i].book_name %> &nbsp&nbsp&nbsp</th>
            <th class="th-7"><%= booksinfo[i].book_id %> &nbsp&nbsp&nbsp</th>
            <th><%= booksinfo[i].lend_id %> &nbsp&nbsp&nbsp</th>
            <th><%= booksinfo[i].lend_time %> &nbsp&nbsp&nbsp</th>
          </tr>
        <% }else{} } %>

    </table>
      <h2><a href="#">新增图书</a></h2>
    </div>
  </div>
  </body>
</html>
