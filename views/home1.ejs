<!DOCTYPE html>
<!-- 普通用户页面 -->
<html>
  <head>
    <title><%= title %></title>
      <link rel='stylesheet' href='/stylesheets/style4.css'  type="text/css" />
  </head>
  <body>
    <div class="top-buttons-agileinfo">
    <div class="top-buttons-left">
    <h2><%= title %></h2>
     </div>
     <div class="top-buttons-right">
         <div class="switch">当前用户：<%= username %>&nbsp&nbsp</br><<%= email %>></div>
        <h5><a href="/users/logout">登出</a></h5>
     </div>

   </div>
   <div class="content">
   <div class="content-view">
    <a href="/home">我的借阅</a>
    <a  class="a1" href="">图书馆藏</a>
    <table class="content-view-table">
      <tr  class="tr-1">
        <th class="th-1">书名&nbsp&nbsp&nbsp</th>
        <th class="th-2">书本编号&nbsp&nbsp&nbsp</th>
        <th class="th-3">借阅状态&nbsp&nbsp&nbsp</th>
        <th class="th-4">操作&nbsp&nbsp&nbsp</th>
      </tr>
      <% for(var i in booksinfo){ %>
      <tr>
        <th><%= booksinfo[i].book_name %> &nbsp&nbsp&nbsp</th>
        <th><%= booksinfo[i].book_id %> &nbsp&nbsp&nbsp</th>
        <% if(booksinfo[i].lend_time!=null){ %>
          <th>借出日期:<%= booksinfo[i].lend_time %> &nbsp&nbsp&nbsp</th>
          <th>
          <form  action="#" method="get" style="padding-left: 18px;padding-top: 10px;">
            <button type="submit" value="<%= booksinfo[i].book_id %>" name="id">预约</form>
          </th>
        <% }else{ %>
          <th>可借&nbsp&nbsp&nbsp</th>
          <th class="th-5">
          <form  action="/books/lendBook" method="get">
            <button type="submit" value="<%= booksinfo[i].book_id %>" name="book_id">借阅</form>
          </th>
        <% } %>
      </tr>
      <% } %>
    </table>
   </div>
 </div>
  </body>
</html>
