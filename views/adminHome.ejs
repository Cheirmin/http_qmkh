<!DOCTYPE html>
<!-- 管理员用户页面 -->
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style5.css'  type="text/css" />
  </head>
  <body>
    <div class="top-buttons-agileinfo">
    <div class="top-buttons-left">
    <h2><a><%= title %></a></h2>
  </div>
  <div class="top-buttons-right">
      <div class="switch">当前用户：<%= username %>&nbsp&nbsp</br><<%= email %>></div>
     <h5><a href="/users/logout">登出</a></h5>
  </div>

</div>
   <div class="content">
   <div class="content-view">
    <a class="a1" href="">用户信息管理</a>
    <a href="/books/getAllBookInfo">图书信息管理</a>
    <table class="content-view-table" style="margin-left:30px;width:897.6px;">
      <tr class="tr-1">
        <th><th><th class="th-1">操作管理&nbsp&nbsp&nbsp</th></th></th>
        <th class="th-2">学号&nbsp&nbsp&nbsp</th>
        <th class="th-3">姓名&nbsp&nbsp&nbsp</th>
        <th class="th-4">邮箱&nbsp&nbsp&nbsp</th>
        <th class="th-6">用户角色&nbsp&nbsp&nbsp</th>
        <th class="th-6">借出的书&nbsp&nbsp&nbsp</th>
      </tr>
        <% for(var i in usersinfos) {if(usersinfos[i].deleted_at == null ) %>
      <tr class="tr-2">
        <% if(usersinfos[i].role_id == 1 ){%>
        <th>
          <th>
            <form  action="/users/getUserInfo" method="get">
              <button type="submit" value="<%= usersinfos[i].user_id %>" name="id">修改</form>
          </th>
          <th>
          <form  action="users/deleteUser" method="get">
            <button type="submit" value="<%= usersinfos[i].user_id %>" name="id"
            onclick="if (confirm('确定要删除吗？') == false) return false;"/>删除</form>
          </th>
        </th>
        <%}else{%>
          <th>
            <th class="th-9">无权限&nbsp</th>
            <th class="th-9">无权限&nbsp</th>
          </th>
        <% } %>
        <th><%= usersinfos[i].user_id %> &nbsp&nbsp&nbsp</th>
        <th><%= usersinfos[i].user_name %> &nbsp&nbsp&nbsp</th>
        <th><%= usersinfos[i].email %> &nbsp&nbsp&nbsp</th>
        <% if(usersinfos[i].role_id == 0 ){%>
          <th>管理员&nbsp&nbsp&nbsp</th>
        <%}else{%>
          <th>普通用户&nbsp&nbsp&nbsp</th>
        <% } %>
        <% if(usersinfos[i].my_lend == null ){%>
          <th>该用户暂时还没借书哦&nbsp&nbsp&nbsp</th>
        <%}else{%>
          <th><%= usersinfos[i].my_lend %> &nbsp&nbsp&nbsp</th>
        <% } %>
      </tr>
        <% } %>
    </table>
  </div>
</div>
  </body>
</html>
